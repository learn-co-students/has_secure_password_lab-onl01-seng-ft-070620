<h1>Create a new account</h1>

<%= form_for @user do |f| %> 
    <%= f.label "Name:" %>
    <%= f.text_field :name %>
    <%= f.label "Password:" %>
    <%= f.password_field :password %>
    <%= f.label "Password Confirmation:" %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit "Create Account" %>
<% end %>